<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="server"/>
    <context:component-scan base-package="server.persistence"/>

    <bean id="dataSource" class="org.sqlite.SQLiteDataSource">
        <property name="url" value="jdbc:sqlite:#{ systemProperties['user.home'] }/CalendarDB/Events.db"/>
    </bean>

    <bean class="org.springframework.remoting.rmi.RmiServiceExporter">
        <property name="serviceName" value="CalendarService"/>
        <property name="service" ref="serviceHandler"/>
        <property name="serviceInterface" value="common.services.CalendarService"/>
        <property name="replaceExistingBinding" value="true"/>
        <property name="registryPort" value="1099"/>
    </bean>

</beans>

