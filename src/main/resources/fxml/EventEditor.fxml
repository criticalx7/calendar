<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="520.0"
      prefWidth="234.0" styleClass="background" stylesheets="@../css/MFXTheme.css"
      xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="viewmodel.controller.EventEditor">
    <AnchorPane fx:id="headerPane" prefHeight="84.0" prefWidth="268.0" styleClass="color-pane">
        <Label fx:id="dayLabel" layoutX="14.0" layoutY="11.0" prefHeight="34.0" prefWidth="26.0" text="18"
               textFill="#ececec">
            <font>
                <Font name="Segoe UI Semibold" size="26.0"/>
            </font>
        </Label>
        <Label fx:id="monthYearLabel" layoutX="14.0" layoutY="45.0" prefHeight="25.0" prefWidth="134.0"
               text="October 2017" textFill="#ececec">
            <font>
                <Font name="Segoe UI Light" size="16.0"/>
            </font>
        </Label>
    </AnchorPane>
    <AnchorPane prefHeight="100.0" prefWidth="268.0">
        <Label layoutX="20.0" layoutY="21.0" text="Name*" textFill="#ececec">
            <font>
                <Font name="Segoe UI Semilight" size="13.0"/>
            </font>
        </Label>
        <TextField fx:id="nameField" layoutX="19.0" layoutY="41.0">
            <font>
                <Font name="Segoe UI Semilight" size="13.0"/>
            </font>
        </TextField>
        <Label fx:id="nameErrorText" layoutX="19.0" layoutY="78.0" text="*Name is required." textFill="#ff0f0f"
               visible="false">
            <font>
                <Font name="Segoe UI Semilight Italic" size="13.0"/>
            </font>
        </Label>
    </AnchorPane>
    <AnchorPane prefHeight="115.0" prefWidth="234.0">
        <DatePicker fx:id="startPicker" layoutX="14.0" layoutY="37.0" onAction="#prepareHeader" prefHeight="28.0"
                    prefWidth="196.0" promptText="dd-mm-yyyy"
                    style="-fx-background-color: transparent; -fx-background-radius: 0;"/>
        <Label layoutX="21.0" layoutY="13.0" text="Start*" textFill="#ececec">
            <font>
                <Font name="Segoe UI Semilight" size="14.0"/>
            </font>
        </Label>
        <CheckBox fx:id="repeatBox" layoutX="19.0" layoutY="84.0" mnemonicParsing="false" text=" Repeat...">
            <font>
                <Font name="Segoe UI Light" size="12.0"/>
            </font>
        </CheckBox>
        <CheckBox fx:id="allDayBox" disable="true" layoutX="127.0" layoutY="85.0" mnemonicParsing="false"
                  text="All day"/>
    </AnchorPane>
    <AnchorPane prefHeight="168.0" prefWidth="234.0">
        <Label layoutX="26.0" layoutY="14.0" text="Tag" textFill="#ececec">
            <font>
                <Font name="Segoe UI Semilight" size="14.0"/>
            </font>
        </Label>
        <TextField fx:id="tagField" layoutX="60.0" layoutY="2.0" prefHeight="30.0" prefWidth="149.0">
            <font>
                <Font name="Segoe UI Light" size="13.0"/>
            </font>
        </TextField>
        <Label layoutX="17.0" layoutY="51.0" text="Color" textFill="#ececec">
            <font>
                <Font name="Segoe UI Semilight" size="14.0"/>
            </font>
        </Label>
        <ColorPicker fx:id="colorPicker" layoutX="59.0" layoutY="49.0" onAction="#changeColor" prefHeight="27.0"
                     prefWidth="149.0"/>
        <Label layoutX="19.0" layoutY="94.0" text="Note" textFill="#ececec">
            <font>
                <Font name="Segoe UI Semilight" size="14.0"/>
            </font>
        </Label>
        <TextArea fx:id="noteArea" layoutX="59.0" layoutY="97.0" prefHeight="56.0" prefWidth="149.0" wrapText="true">
            <font>
                <Font name="Segoe UI Semilight" size="13.0"/>
            </font>
        </TextArea>
    </AnchorPane>
    <AnchorPane prefHeight="54.0" prefWidth="260.0">
        <Button fx:id="saveButton" defaultButton="true" layoutX="136.0" layoutY="7.0" mnemonicParsing="false"
                onAction="#handleAdd" prefHeight="31.0" prefWidth="74.0" text="Save"/>
    </AnchorPane>
</VBox>
